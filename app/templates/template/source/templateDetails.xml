<?xml version="1.0" encoding="utf-8"?>
<extension type="template"
		   client="site"
		   method="upgrade"
		   version="3.0">
	<author><%= author %></author>
	<authorEmail><%= authorEmail %></authorEmail>
	<authorUrl><%= authorUrl %></authorUrl>
	<copyright>Copyright (C) <%= creationYear %> <%= author %>. All rights reserved.</copyright>
	<creationDate><%= creationDate %></creationDate>
	<description><%= nameUppercase %>_XML_DESCRIPTION</description>
	<license><%= license %></license>
	<name><%= unprefixedName %></name>
	<version>1.0.0</version>
	<files>
		<folder>assets</folder>
		<folder>core</folder>
		<folder>fields</folder>
		<folder>helpers</folder>
		<folder>html</folder>
		<folder>language</folder>
		<filename>component.php</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>LICENSE.txt</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
	</files>
	<positions>
		<position>right</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="basic"
					  addfieldpath="/templates/<%= name %>/fields">
				<!-- Your fields here -->
			</fieldset>
		</fields>
	</config>
</extension>